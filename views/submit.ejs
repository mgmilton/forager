<div class="col-md-5">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title text-center">Log A Wildlife Finding! <span class="glyphicon glyphicon-map-marker"></span></h2>
        </div>

        <div class="panel-body">
            <form name ="addForm" novalidate>
                <div class="form-group">
                    <label for="username">Wildlife Name </label>
                    <input type="text" class="form-control" id="username" placeholder="Monkey Puzzle Tree" ng-model="formData.username" required>
                </div>
                <div class="form-group">
                    <label for="username">Wildlife Description </label>
                    <input type="text" class="form-control" id="username" placeholder="Cactus like tree 10 ft" ng-model="formData.username" required>
                </div>
                <label class="form-group">Species</label>
                    <input type="text" class="form-control" id="username" placeholder="Araucaria araucana" ng-model="formData.username" required>
                </div>
                <div class="form-group">
                    <label for="language">Location Description</label>
                    <input type="text" class="form-control" id="language" placeholder="North facing side of hill" ng-model="formData.favlang" required>
                </div>
                <div class="form-group">
                    <label for="latitude">Latitude</label>
                    <input type="text" class="form-control" id="latitude" value="39.500" ng-model="formData.latitude" readonly>
                </div>
                <div class="form-group">
                    <label for="longitude">Longitude</label>
                    <input type="text" class="form-control" id="longitude" value="-98.350" ng-model="formData.longitude" readonly>
                </div>
                <!-- Submit button. Note that its tied to createUser() function from addCtrl. Also note ng-disabled logic which prevents early submits.  -->
                <button type="submit" class="btn btn-danger btn-block" ng-click="createWildLife()" ng-disabled="addForm.$invalid">Submit</button>
            </form>
        </div>
    </div>
</div>
</div>
<hr/>
